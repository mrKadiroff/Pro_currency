<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    tools:context=".GlavniFragment">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="23sp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_height="163dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@drawable/card_background"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/simvol"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/usd"
                android:layout_marginStart="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.16000003" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:textSize="18sp"
                android:text="18.01.2000"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/simvol"
                android:textColor="@color/white"
                app:layout_constraintTop_toTopOf="@id/simvol"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/buying"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Sotilishi"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/simvol"
                app:layout_constraintTop_toBottomOf="@id/simvol"
                app:layout_constraintVertical_bias="0.25" />

            <TextView
                android:id="@+id/sotilishi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="10 530 UZS"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/buying"
                app:layout_constraintTop_toBottomOf="@id/buying"
                app:layout_constraintVertical_bias="0.1" />

            <TextView
                android:id="@+id/Taking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Olinishi"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.54"
                app:layout_constraintStart_toEndOf="@id/buying"
                app:layout_constraintTop_toTopOf="@id/buying" />


            <TextView
                android:id="@+id/olinishi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="10 530 UZS"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/Taking"
                app:layout_constraintTop_toBottomOf="@id/Taking"
                app:layout_constraintVertical_bias="0.1" />







        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>